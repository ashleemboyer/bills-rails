<p id="notice"><%= notice %></p>

<div class="title">
  <h1>Accounts</h1>
  <%= link_to new_account_path do %>
    <%= fa_icon "plus-circle", class: "fa-3x" %>
  <% end %>
</div>

<% @accounts.order(:name).each do |account| %>
  <div class="card">
    <div class="card-title">
      <h2><%= account.name %></h2>
      <div class="card-actions">
        <%= link_to edit_account_path(account) do %>
          <%= fa_icon "pencil" %>
        <% end %>
        <%= link_to account, method: :delete, data: { confirm: "Are you sure?" } do %>
          <%= fa_icon "trash" %>
        <% end %>
      </div>
    </div>
    <div>
      <a href="<%= account.url %>" target="_blank">Visit <%= fa_icon "external-link" %></a>
    </div>
  </div>
<% end %>
